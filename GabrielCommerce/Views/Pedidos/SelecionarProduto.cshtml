@model IEnumerable<GabrielCommerce.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<div id="products" class="row list-group">
    @foreach (var produto in Model)
    {
        <div class="item  col-xs-6 col-lg-6">
            <div class="thumbnail">
                <div class="caption">
                    <h4 class="group inner list-group-item-heading">
                        @produto.Nome
                    </h4>
                    <p class="group inner list-group-item-text">
                        @produto.Categoria
                    </p>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <p class="lead">
                                @string.Format("{0:C}", produto.Preco)
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            @Html.ActionLink("Adicionar ao Carrinho", "AdicionarAoCarrinho", new { id = produto.Id, pedidoId = ViewBag.Id }, new { @class = "btn btn-success" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>