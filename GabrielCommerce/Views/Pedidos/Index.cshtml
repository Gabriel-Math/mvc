@model IEnumerable<GabrielCommerce.Models.Pedido>

    @{
        ViewData["Title"] = "Index";
    }

    <h2>Pedidos</h2>

    <p>
        <a asp-action="SelecionarProduto" class="btn btn-default">Fazer novo pedido</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    Total
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @string.Format("{0:C}", item.Itens.Sum(i => i.Produto.Preco))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Nome)
                    </td>
                    <td>
                        <a asp-action="Carrinho" asp-route-id="@item.Id">Carrinho</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
